@model UBox.ViewModels.SearchModel

<form asp-action="ProfileSearch" asp-controller="Search" asp-anti-forgery="true">
    <input asp-for="Name" type="text" />
    <input type="submit" value="Пошук" />
</form>

@{ if (Model == null)
    {
        <p>Введіть імя користувача</p>
    }
    else if(Model.ListOfUser.Count == 0)
    {
        <p>Користувачів з @Model.Name іменем не знайдено</p>
    }
    else
    {
        foreach (var el in Model.ListOfUser)
        {
            <a asp-action="Profile" asp-controller="Profile" asp-route-userId="@el.Key.Id">
                <img  src="@el.Value"/>
                <p>@el.Key.UserName</p>
                <p>@el.Key.Email</p>
            </a>
            
        }
    }
}